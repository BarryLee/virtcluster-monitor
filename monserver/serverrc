# Configuration file for monitor server
# 


#
# network configs
#
# network interface for internal communication
local_interface = 'lo'
# network interface for external access
public_interface = 'lo'
# rpc server port number
rpc_port = 20060
# data server port number
ds_port = 20060

cache_server_port = 20061


#
# RoundRobinDatabase configs
#
# root directory for rrd files
RRD_root = '/tmp/rrds'


# the output will be redirected to this file(when demonized)
ofile = '/tmp/monserver.out'

# the pid file for demonizing
pfile = '/tmp/monserver.pid'

# log path
logfile = '/tmp/monserver.log'

# if the server doesn't recieve data from a agent for this long,
# it considers the agent down. (in seconds)
# this value must be larger than the whole retry time of agent
agent_timeout = 300

check_alive_interval = 60


cache_size = 10000
